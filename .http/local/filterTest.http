### 로그인 테스트
POST http://localhost:8080/api/auth/login
Content-Type: application/json

{
  "email": "hurjin1109@naver.com",
  "password": "1234"
}

> {%
    client.test("로그인 성공", function() {
        client.assert(response.status === 200, "응답 코드가 200이어야 합니다");
    });

    // 쿠키에서 accessToken 저장
    if (response.headers.valueOf("Set-Cookie")) {
        const cookies = response.headers.valueOf("Set-Cookie");
        client.global.set("accessToken", cookies);
        client.log("accessToken 쿠키 저장됨: " + cookies);
    }
%}

